<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minHeight="@dimen/mal_action_image_height"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/mal_list_padding"
    android:layout_marginRight="@dimen/mal_list_padding"
    android:layout_marginStart="@dimen/mal_list_padding"
    android:layout_marginEnd="@dimen/mal_list_padding"
    android:layout_weight="1">

    <TextView
        android:id="@+id/mal_text_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

    <TextView
        android:id="@+id/mal_text_item_subText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:visibility="gone"/>
</LinearLayout>